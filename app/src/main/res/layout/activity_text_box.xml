<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout android:gravity="start"
        android:id="@+id/textboxpage"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/rectangle_bg_white_a700_radius_24">

        <LinearLayout android:gravity="center_horizontal"
            android:id="@+id/textboxpage2"
            android:layout_height="0dp" android:layout_weight="1.0"
            android:layout_width="match_parent" android:orientation="vertical">

            <TextView
                android:id="@+id/TitleHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_bg_red_a400"
                android:ellipsize="end"
                android:fontFamily="@font/lalezar"
                android:gravity="start"
                android:lineSpacingExtra="-12dp"
                android:paddingStart="15dp"
                android:paddingTop="16dp"
                android:paddingBottom="13dp"
                android:singleLine="false"
                android:text="SUARA\nBERSAMA"
                android:textColor="#FFFFFFFF"
                android:textFontWeight="400"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry,UnusedAttribute" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:id="@+id/suarakanpendapatmu"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="23dp"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="50dp"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="SUARAKAN PENDAPATMU!"
                        android:textSize="20sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/lalezar"
                        android:textFontWeight="400"/>

                    <LinearLayout
                        android:layout_width="365dp"
                        android:layout_height="62dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="35dp">

                        <TextView
                            android:id="@+id/hindaripenulisanopini"
                            android:layout_width="149dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="14dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/border_textview_red"
                            android:fontFamily="@font/inter"
                            android:gravity="center_horizontal"
                            android:padding="8dp"
                            android:text="Hindari penulisan opini diluar topik yang dipilih"
                            android:textColor="#FF0000"
                            android:textFontWeight="600"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/hindaripenulisan"
                            android:layout_width="155dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginEnd="26dp"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/border_textview_red"
                            android:fontFamily="@font/inter"
                            android:gravity="center_horizontal"
                            android:padding="8dp"
                            android:text="Hindari penulisan yang bersifat ujaran kebencian"
                            android:textColor="#FF0000"
                            android:textFontWeight="600"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="365dp"
                        android:layout_height="87dp"
                        android:orientation="horizontal"
                        android:layout_marginStart="30dp">

                        <TextView
                            android:id="@+id/cantumkandata"
                            android:layout_width="145dp"
                            android:layout_height="71dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginEnd="6dp"
                            android:layout_marginBottom="4dp"
                            android:background="@drawable/border_textview_red"
                            android:fontFamily="@font/inter"
                            android:gravity="center_horizontal"
                            android:padding="8dp"
                            android:text="Cantumkan data dan fakta yang mendukung opini Anda"
                            android:textColor="#FF0000"
                            android:textFontWeight="600"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/setiappendapat"
                            style="@style/txtIntersemibold8"
                            android:layout_width="155dp"
                            android:layout_height="65dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="9dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/border_textview_red"
                            android:gravity="center_horizontal"
                            android:padding="8dp"
                            android:text="Setiap pendapat yang diberikan sepenuhnya merupakan tanggung jawab pengunggah" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/opinisayauntuk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="45dp"
                        android:layout_marginTop="49dp"
                        android:layout_marginEnd="45dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter"
                        android:singleLine="true"
                        android:text="Opini saya untuk..."
                        android:textColor="#000000"
                        android:textFontWeight="600"
                        android:textSize="10sp" />

                    <Spinner
                        android:background="@drawable/layer_list_bg_white_a700_border_gray_100"
                        android:gravity="center_horizontal"
                        android:id="@+id/spinneritem"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="23dp"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="7dp"
                        android:layout_width="match_parent"
                        tools:listitem="@layout/spinner_item"/>

                    <FrameLayout
                        android:id="@+id/textboxtuliskan"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="254dp"
                        android:layout_marginEnd="23dp"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="35dp"
                        android:layout_width="314dp">

                        <EditText
                            android:id="@+id/tulisjudulartikel"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:layout_gravity="top|start"
                            android:layout_marginBottom="30dp"
                            android:background="@drawable/rectangle_bg_white_a700_border_red_a400_radius_tl_4_tr_4"
                            android:ellipsize="end"
                            android:hint="Tulis Judul Artikel (minimal 3 kata)..."
                            android:inputType="text"
                            android:paddingStart="8dp"
                            android:paddingTop="6dp"
                            android:paddingEnd="30dp"
                            android:paddingBottom="5dp"
                            android:singleLine="true"
                            android:textSize="10sp"
                            android:textColorHint="@color/black"
                            android:fontFamily="@font/inter"
                            tools:ignore="Autofill" />

                        <LinearLayout
                            android:id="@+id/tuliskanpendapatanda"
                            android:background="@drawable/rectangle_bg_white_a700_border_red_a400_8f"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|start"
                            android:layout_marginTop="50dp"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/tuliskanpendapattext"
                                android:layout_width="337dp"
                                android:layout_height="154dp"
                                android:layout_marginStart="9dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="93dp"
                                android:layout_marginBottom="212dp"
                                android:ellipsize="end"
                                android:fontFamily="@font/inter"
                                android:gravity="start"
                                android:hint="Tuliskan Pendapat anda (minimal 250 kata)..."
                                android:singleLine="true"
                                android:textColor="#000000"
                                android:textFontWeight="400"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </FrameLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:ellipsize="end"
                        android:gravity="center"
                        android:id="@+id/kirimbutton"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="53dp"
                        android:layout_marginEnd="23dp"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="36dp"
                        android:layout_marginBottom="50dp"
                        android:layout_width="192dp"
                        android:paddingBottom="7dp"
                        android:paddingEnd="30dp"
                        android:paddingStart="30dp"
                        android:paddingTop="7dp"
                        android:singleLine="true"
                        android:text="Kirim"
                        android:textAllCaps="false"
                        android:textSize="24sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/lalezar"
                        android:textFontWeight="400"
                        android:background="@drawable/rectangle_bg_red_a400_radius_20"
                        tools:text="Kirim"/>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frameBottombar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" style="@style/groupStylered_A400">

            <LinearLayout android:id="@+id/linearRowhome"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent" android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageHome"
                    android:layout_width="22dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="12dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_home"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_home" />
                <ImageView android:id="@+id/imageAntdesigncomm"
                    android:layout_gravity="center"
                    android:layout_height="27dp"
                    android:layout_marginBottom="11dp"
                    android:layout_marginStart="52dp"
                    android:layout_marginTop="11dp"
                    android:layout_width="30dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_antdesigncomm"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_antdesigncomm"/>
                <FrameLayout android:id="@+id/frameHealthiconscit"
                    android:layout_height="45dp"
                    android:layout_marginStart="40dp"
                    android:layout_gravity="center"
                    android:layout_width="58dp" style="@style/groupStylecornerRadius_1">
                    <ImageView android:id="@+id/imageUser"
                        android:layout_gravity="center"
                        android:layout_height="42dp"
                        android:layout_width="42dp"
                        android:src="@drawable/img_user_white_a700"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_user_white_a700"/>
                </FrameLayout>
                <ImageView android:id="@+id/imageSearch"
                    android:layout_gravity="center"
                    android:layout_height="25dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="46dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="25dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_search"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_search"/>
                <ImageView android:id="@+id/imageUserOne"
                    android:layout_gravity="center"
                    android:layout_height="34dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="35dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_user"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_user"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
